<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name_v2"
        android:textColor="@color/white"
        android:background="@color/purple"/>

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mensaje"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSi"
        android:layout_below="@+id/mensaje"
        android:layout_alignParentStart="true"/>
        <!-- TextView a la izquierda -->
        <!-- android:layout_alignParentLeft="true" -->

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnNo"
        android:layout_below="@+id/mensaje"
        android:layout_centerInParent="true"/>
        <!-- Posicionamiento al centro -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnAVeces"
        android:layout_below="@+id/mensaje"
        android:layout_alignParentEnd="true"/>
        <!-- Posicionamiento a la derecha -->
        <!-- android:layout_alignParentRight="true" -->

</RelativeLayout>