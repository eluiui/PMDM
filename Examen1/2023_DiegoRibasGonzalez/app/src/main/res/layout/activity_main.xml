<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundAplicacion"
    android:padding="22dp">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo"
        android:background="@color/backgroundImagen"
        android:padding="22dp"/>

    <LinearLayout
        android:id="@+id/llImc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundImagen"
        android:gravity="center"
        android:visibility="gone"
        android:padding="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMC"
            android:textSize="25sp"
            android:textColor="@color/backgroundAplicacion"/>

        <RadioGroup
            android:id="@+id/rgOpciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbImc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular IMC"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbInformacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mas informacion"/>

        </RadioGroup>

        <Button
            android:id="@+id/btnOpcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>